@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">Name</div>
        <div class="col-4"><input type="text" id="nameInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Game ID</div>
        <div class="col-4"><input type="text" id="gameIdInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Answer</div>
        <div class="col-4"><input type="text" id="answerInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="createGame" value="Create New Game" />
        </div>
        <div class="col-6">
            <input type="button" id="getGame" value="Get Game Info" />
        </div>
        <div class="col-6">
            <input type="button" id="joinGame" value="Join Game" />
        </div>
        <div class="col-6">
            <input type="button" id="startGame" value="Start Game" />
        </div>
        <div class="col-6">
            <input type="button" id="sendAnswer" value="Send Answer" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/testing.js"></script>