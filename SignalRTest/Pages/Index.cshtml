@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="startConnection" value="Connect" />
        </div>
        <div class="col-6">
            <input type="button" id="createGame" value="Create New Game" />
        </div>
        <div class="col-6">
            <input type="button" id="getGames" value="Get Active Games" />
        </div>
        <div class="col-6">
            <input type="button" id="stopConnection" value="Disconnect" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/testing.js"></script>